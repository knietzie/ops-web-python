## - https://docs.djangoproject.com/en/1.8/howto/deployment/wsgi/modwsgi/ --##
#WSGIScriptAlias / /path/to/mysite.com/mysite/wsgi.py
#WSGIPythonPath /path/to/mysite.com

LoadModule wsgi_module modules/mod_wsgi.so

WSGIScriptAlias / /srv/www/current/ams/wsgi.py
WSGIPythonPath /srv/www/current:/srv/www/venv/lib/python2.7/site-packages
WSGISocketPrefix run/wsgi
WSGIRestrictEmbedded On

<VirtualHost *:80>

<Directory /srv/www/current/ams>
<Files wsgi.py>
 ##Require all granted (for apache 2.4 higher)

 Order deny,allow
 Allow from all
 
</Files>
</Directory>


Alias /static/ /srv/www/currentstatic/
<Directory /srv/www/current/static>
 ##Require all granted

 Order deny,allow
 Allow from all 
</Directory>


#WSGIScriptAlias / /srv/www/current/ams/wsgi.py

WSGIDaemonProcess wsgi python-path=/srv/www/current:/srv/www/venv/lib/python2.7/site-packages
WSGIProcessGroup wsgi

</VirtualHost>

LoadModule wsgi_module modules/mod_wsgi.so
WSGIPassAuthorization On

